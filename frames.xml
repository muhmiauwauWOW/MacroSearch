<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">


	
	<Frame name="MacroSearchNoSearchResultsText" parent="MacroFrame" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString inherits="SystemFont_Med3" text="QUEST_LOG_NO_RESULTS" >
					<Size x="250"/>
					<Anchors>
						<Anchor point="TOP"  relativeKey="$parent.MacroSelector" relativePoint="TOP" y="-30"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="MacroSearch" parent="MacroFrame" mixin="MacroSearchMixin" >
		<Size  y="20"/>
		<Anchors> 
			<Anchor point="TOP" y="-68" />
			<Anchor point="LEFT" x="20" />
			<Anchor point="RIGHT" x="-10" />
		</Anchors>
		<Frames>
			<EditBox name="MacroSearchSearchBarTemplate" parentKey="SearchBar" autoFocus="false" historyLines="1" bytes="64" mixin="MacroSearchSearchBarMixin" inherits="SearchBoxTemplate">
				<Size y="20"/>
				<Anchors>
					<Anchor point="LEFT" x="0" />
					<Anchor point="RIGHT" x="-27" />
				</Anchors>
				<Scripts>
					<OnLoad method="OnLoad" />
					<OnEnterPressed method="OnEnterPressed" />
					<OnKeyUp method="OnKeyUp" />
				</Scripts>
			</EditBox>
			<DropdownButton parentKey="SettingsDropdown" mixin="MacroSearchSettingsButtonMixin">
				<Size x="15" y="16"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-7" y="-3"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Icon" atlas="questlog-icon-setting" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="HIGHLIGHT">
						<Texture atlas="questlog-icon-setting" useAtlasSize="true" inherits="QuestLogHighlightTextureTemplate">
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.Icon"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown method="OnMouseDown"/>
					<OnMouseUp method="OnMouseUp"/>
				</Scripts>
			</DropdownButton>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>

</Ui>